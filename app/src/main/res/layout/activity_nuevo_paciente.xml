<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".NuevoPacienteActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_columnSpan="3"
        />

    <TextView
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ingrese los datos del nuevo paciente"
        android:textAlignment="center"
        android:textSize="20dp"
        android:layout_columnSpan="3"
        android:layout_row="1"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_columnSpan="3"
        />

    <TextView
        android:layout_width="29dp"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_column="0" />

    <TextView
        android:layout_width="97dp"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_column="1"
        android:text="Nombre: "
        />

    <EditText
        android:id="@+id/ingresarNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Nombre del paciente"
        android:inputType="textPersonName"
        android:layout_column="2"
        android:layout_row="3"
        />

    <TextView
        android:layout_width="29dp"
        android:layout_height="wrap_content"
        android:layout_row="4"
        android:layout_column="0" />

    <TextView
        android:layout_width="97dp"
        android:layout_height="wrap_content"
        android:layout_row="4"
        android:layout_column="1"
        android:text="Apellidos: "
        />

    <EditText
        android:id="@+id/ingresarApellido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Apellido del paciente"
        android:inputType="textPersonName"
        android:layout_column="2"
        android:layout_row="4"
        />

    <TextView
        android:layout_width="29dp"
        android:layout_height="wrap_content"
        android:layout_row="5"
        android:layout_column="0" />

    <TextView
        android:layout_width="97dp"
        android:layout_height="wrap_content"
        android:layout_row="5"
        android:layout_column="1"
        android:text="Edad: "
        />

    <EditText
        android:id="@+id/ingresarEdad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Edad"
        android:inputType="number"
        android:layout_column="2"
        android:layout_row="5"
        />

    <TextView
        android:layout_width="29dp"
        android:layout_height="wrap_content"
        android:layout_row="6"
        android:layout_column="0" />

    <TextView
        android:layout_width="97dp"
        android:layout_height="wrap_content"
        android:layout_row="6"
        android:layout_column="1"
        android:text="Diagnostico: "
        />

    <EditText
        android:id="@+id/ingresardiag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Diagnostico"
        android:inputType="textPersonName"
        android:layout_column="2"
        android:layout_row="6"
        />

    <TextView
        android:layout_width="29dp"
        android:layout_height="wrap_content"
        android:layout_row="7"
        android:layout_column="0" />

    <TextView
        android:layout_width="97dp"
        android:layout_height="wrap_content"
        android:layout_row="7"
        android:layout_column="1"
        android:text="Observaciones: "
        />

    <EditText
        android:id="@+id/ingresarosb"
        android:layout_width="wrap_content"
        android:layout_height="97dp"
        android:layout_row="7"
        android:layout_column="2"
        android:ems="10"
        android:hint="Observaciones"
        android:inputType="textMultiLine"
        />

    <TextView
        android:layout_width="97dp"
        android:layout_height="wrap_content"
        android:layout_row="8"
        android:layout_column="1"
        android:text="Fecha de ingreso: "
        />

    <EditText
        android:id="@+id/ingresarfecha"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_row="8"
        android:layout_column="2"
        android:ems="10"
        android:hint="Fecha de ingreso"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/IngresarFecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150dp"
        android:layout_row="8"
        android:layout_column="2"
        android:text="Fecha"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="9"
        android:layout_columnSpan="3"
        />

    <Button
        android:id="@+id/BotonIngresarPaciente"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_row="10"
        android:onClick="ingresarPaciente"
        android:text="Ingresar Paciente" />

</GridLayout>